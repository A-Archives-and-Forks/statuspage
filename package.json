    "simple-git-hooks": "^2.8.0",
    "typescript": "4.7.4",
    "vitest": "^0.15.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{md,yaml,toml}": "eslint --fix",
    "*.{json}": "eslint --fix"
  }
