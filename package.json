{
  "name": "statuspage",
  "version": "0.0.1",
  "private": true,
  "description": "Monorepo for a Cloudflare based Statuspage. ",
  "author": "Jan Stubenrauch <info@jstubenrauch.de>",
  "license": "MIT",
  "homepage": "http(s)://stubijs.github.io/statuspage",
  "keywords": [
    "cloudflare",
    "vite",
    "vue",
    "vue.js",
    "vue3",
    "cloudflare worker",
    "cloudflare pages"
